<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Authors>$(Vivi)</Authors>
    <Product>$(ConnectionStringBuilder)</Product>
    <Description>Library to build connection strings for different databases.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/ViviTraan/ConnectionStringBuilder</RepositoryUrl>
    <PackageTags>Connectionstring, SQL, MySQL, SQLite, MongoDB, Database</PackageTags>
    <PackageIcon>data-network.png</PackageIcon>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\..\Downloads\data-network.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
